 <section class="topImageSection homeSection">
    <div class="topImageWrapper">
        <h1 class="topImageHeader">{{{ content.content1 }}}</h1>
        <p class="topImageText">{{{ content.content2 }}}</p>
        <div class="topImageButtonsWrapper">
            <div class="scheduleWrapper">
                <button class="consultationButton" type="button">SCHEDULE YOUR IN-HOME CONSULTATION RIGHT NOW</button>
                {{> micro-blocks/zip-code/zip-code }}
            </div>
            <a class="instantQuoteButton" href="/instant-quote/">GET AN INSTANT QUOTE ONLINE</a>
        </div>
    </div>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {{# each slider }}
                <div class="swiper-slide slide{{{ sliderID }}}">
                    <style>
                        @media screen and (max-width: 479px) {
                            .slide{{{ sliderID }}} {
                                background-image: url("{{{ sliderImage }}}_480x722.jpg");
                            }
                            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi) {
                                .slide{{{ sliderID }}} {
                                    background-image: url("{{{ sliderImage }}}_960x1444.jpg");
                                }
                            }
                        }
                        @media screen and (min-width: 480px) and (max-width: 767px) {
                            .slide{{{ sliderID }}} {
                                background-image: url("{{{ sliderImage }}}_768x726.jpg");
                            }
                            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi) {
                                .slide{{{ sliderID }}} {
                                    background-image: url("{{{ sliderImage }}}_1536x1452.jpg");
                                }
                            }
                        }
                        @media screen and (min-width: 768px) and (max-width: 999px) {
                            .slide{{{ sliderID }}} {
                                background-image: url("{{{ sliderImage }}}_1000x619.jpg");
                            }
                            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi) {
                                .slide{{{ sliderID }}} {
                                    background-image: url("{{{ sliderImage }}}_2000x1238.jpg");
                                }
                            }
                        }
                        @media screen and (min-width: 1000px) and (max-width: 1439px) {
                            .slide{{{ sliderID }}} {
                                background-image: url("{{{ sliderImage }}}_1440x721.jpg");
                            }
                            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi) {
                                .slide{{{ sliderID }}} {
                                    background-image: url("{{{ sliderImage }}}_2880x1442.jpg");
                                }
                            }
                        }
                        @media screen and (min-width: 1440px) {
                            .slide{{{ sliderID }}} {
                                background-image: url("{{{ sliderImage }}}_1440x877.jpg");
                            }
                            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi) {
                                .slide{{{ sliderID }}} {
                                    background-image: url("{{{ sliderImage }}}_2880x1754.jpg");
                                }
                            }
                        }
                    </style>
                </div>
            {{/each}}
        </div>
    </div>
 </section>