<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Instagram</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }
        .instagramPosts {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            width: 630px;
            margin-left: auto;
            margin-right: auto;
        }
        a {
            margin: 5px;
            width: 200px;
            height: 200px;
            border: none;
            display: block;
        }
        a:hover img {
            opacity: 0.7;
        }
        img {
            width: 100%;
            height: 100%;
            border: none;
        }
        @media screen and (max-width: 767px) {
            .instagramPosts {
                width: 450px;
            }
            a {
                width: 140px;
                height: 140px;
            }
        }
        @media screen and (max-width: 479px) {
            .instagramPosts {
                width: 300px;
            }
            a {
                width: 90px;
                height: 90px;
            }
        }
    </style>
</head>
<body>

<main class="instagramPosts">
    {{# each instagramPosts }}
        <a href="{{{ link }}}">
            <img src="{{{ thumb }}}" alt="BasementRemodeling.com">
        </a>
    {{/each}}
</main>

</body>
</html>