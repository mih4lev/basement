<form class="formNode" action="/admin/about-us/press/edit">

    <input class="hiddenField" type="hidden" name="pressID" value="{{{ page.pressID }}}">

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageTitle">Page title</label>
            <input class="textField" type="text" id="pageTitle"
                   name="pageTitle" value="{{{ page.pageTitle }}}">
        </div>
        <div class="buttonWrapper">
            <button class="deleteButton" type="button" data-redirect="/admin/about-us/press/"
                    data-action="/admin/about-us/press/{{{ page.pressID }}}">
                Delete press
            </button>
            <div class="buttonHiddenWrapper hiddenWrapper">
                <div class="wrapperTitle">Are you sure you want to remove this press?</div>
                <div class="wrapperButtons">
                    <button class="cancelButton" type="button">CANCEL</button>
                    <button class="confirmButton" type="button">DELETE</button>
                </div>
            </div>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageDescription">Page description</label>
            <textarea class="textareaField" id="pageDescription"
                      name="pageDescription">{{{ page.pageDescription }}}</textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageKeywords">Page keywords</label>
            <textarea class="textareaField" id="pageKeywords"
                      name="pageKeywords">{{{ page.pageKeywords }}}</textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressLink">Press link</label>
            <input class="textField" type="text" id="pressLink" name="pressLink" value="{{{ page.pressLink }}}">
        </div>
    </section>

    <section class="fileSection">
        <div class="fileWrapper" style="width: 330px; height: 173px;">
            <input type="file" class="fileField" id="pressImage" name="pressImage">
            <label class="fileLabel" for="pressImage">Press cover</label>
            {{# if page.pressImage }}
                <img class="fieldPreview" src="{{{ page.pressImage }}}_330x173.jpg" alt="Press image">
            {{/ if }}
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressMagazine">Press magazine</label>
            <input class="textField" type="text" id="pressMagazine"
                   name="pressMagazine" value="{{{ page.pressMagazine }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressSource">Source link</label>
            <input class="textField" type="text" id="pressSource"
                   name="pressSource" value="{{{ page.pressSource }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressTitle">Press title</label>
            <input class="textField" type="text" id="pressTitle"
                   name="pressTitle" value="{{{ page.pressTitle }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressAnnounce">Press announce</label>
            <textarea class="textareaField" id="pressAnnounce"
                      name="pressAnnounce">{{{ page.pressAnnounce }}}</textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pressText">Press text</label>
            <textarea class="textareaField tinyField" id="pressText"
                      name="pressText">{{{ page.pressText }}}</textarea>
        </div>
    </section>

    <div class="formButtons">
        {{> micro-blocks/upload-button/upload-button }}
        <button class="submitButton" type="button" title="Update"
                data-action="update" data-api="">Update</button>
    </div>

</form>