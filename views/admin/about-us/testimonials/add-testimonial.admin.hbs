<form class="formNode" action="/admin/about-us/testimonials/add">

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageTitle">Page title</label>
            <input class="textField" type="text" id="pageTitle" name="pageTitle">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageDescription">Page description</label>
            <textarea class="textareaField" id="pageDescription" name="pageDescription"></textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageKeywords">Page keywords</label>
            <textarea class="textareaField" id="pageKeywords" name="pageKeywords"></textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="testimonialLink">Testimonial link</label>
            <input class="textField" type="text" id="testimonialLink" name="testimonialLink">
        </div>
    </section>

    <section class="fileSection">
        <div class="fileWrapper" style="width: 330px; height: 173px;">
            <input type="file" class="fileField" id="testimonialImage" name="testimonialImage">
            <label class="fileLabel" for="testimonialImage">Testimonial cover</label>
        </div>
    </section>

    <section class="ratingSection">
        <span class="ratingTitle">Rating</span>
        <div class="starsWrapper">
            <div class="starsLine"></div>
            <div class="stars" data-rating="0"></div>
        </div>
        <input class="hiddenField" type="hidden" name="testimonialRating">
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="testimonialAuthor">Testimonial author</label>
            <input class="textField" type="text" id="testimonialAuthor" name="testimonialAuthor">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="testimonialState">Testimonial state</label>
            <input class="textField" type="text" id="testimonialState" name="testimonialState">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="testimonialAnnounce">Testimonial announce</label>
            <textarea class="textareaField" id="testimonialAnnounce" name="testimonialAnnounce"></textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="testimonialText">Testimonial text</label>
            <textarea class="textareaField tinyField" id="testimonialText" name="testimonialText"></textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="portfolioID">Portfolio ID</label>
            <input class="textField" type="text" id="portfolioID" name="portfolioID">
        </div>
    </section>

    <div class="formButtons">
        {{> micro-blocks/upload-button/upload-button }}
        <button class="submitButton" type="button" title="Create" data-redirect="/admin/about-us/testimonials"
                data-action="create" data-api="">Create</button>
    </div>

</form>