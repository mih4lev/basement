<form class="formNode">

    <input class="hiddenField" type="hidden" name="pageID" value="{{{ page.pageID }}}">

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageTitle">Page title</label>
            <input class="textField" type="text" id="pageTitle" name="pageTitle" value="{{{ page.pageTitle }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageDescription">Page description</label>
            <textarea class="textareaField" id="pageDescription" name="pageDescription">{{{ page.pageDescription }}}</textarea>
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="pageKeywords">Page keywords</label>
            <textarea class="textareaField" id="pageKeywords" name="pageKeywords">{{{ page.pageKeywords }}}</textarea>
        </div>
    </section>

    <input class="hiddenField" type="hidden" name="settingID" value="1">

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="facebookLink">Facebook link</label>
            <input class="textField" type="text" id="facebookLink"
                   name="facebookLink" value="{{{ facebookLink }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="houzzLink">Houzz link</label>
            <input class="textField" type="text" id="houzzLink"
                   name="houzzLink" value="{{{ houzzLink }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="angiesListLink">Angies list link</label>
            <input class="textField" type="text" id="angiesListLink"
                   name="angiesListLink" value="{{{ angiesListLink }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="porchLink">Porch link</label>
            <input class="textField" type="text" id="porchLink"
                   name="porchLink" value="{{{ porchLink }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="googleLink">Google link</label>
            <input class="textField" type="text" id="googleLink"
                   name="googleLink" value="{{{ googleLink }}}">
        </div>
    </section>

    <section class="fieldSection">
        <div class="fieldWrapper">
            <label class="fieldLabel" for="homeAdvisorLink">Home advisor link</label>
            <input class="textField" type="text" id="homeAdvisorLink"
                   name="homeAdvisorLink" value="{{{ homeAdvisorLink }}}">
        </div>
    </section>

    <div class="formButtons">
        <button class="submitButton" type="button" title="Update"
                data-action="update" data-api="">Update</button>
    </div>

</form>

<section class="listSection">
    <p class="listTitle">Testimonials: </p>
    <ul class="listNode normalVisible sortWrapper" data-sort="/admin/about-us/testimonials/sort">
        <li class="listWrapper">
            <a class="wrapperLink addLink" href="/admin/about-us/testimonials/add">New testimonial</a>
        </li>
        {{# each testimonials }}
            <li class="listWrapper sortNode" data-id="{{{ testimonialID }}}">
                <a class="wrapperLink" href="/admin/about-us/testimonials/edit/{{{ testimonialID }}}">
                    {{# if testimonialImage }}
                        <img class="listImage" src="{{{ testimonialImage }}}_330x173.jpg"
                             alt="{{{ testimonialTitle }}}">
                    {{ else }}
                        <div class="defaultImage"></div>
                    {{/ if }}
                    <span class="listTitle minTitle">{{{ testimonialAuthor }}}</span>
                </a>
            </li>
        {{/ each }}
    </ul>
</section>