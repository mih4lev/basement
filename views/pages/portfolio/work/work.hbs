<section class="pageHeader">
    <div class="wrapper headerWrapper">
        <div class="contentWrapper">
            <h1 class="pageTitle">Portfolio</h1>
            <nav class="breadcrumbs">
                <ul class="breadcrumbList">
                    <li class="breadcrumbLinkWrapper">
                        <a class="breadcrumbLink" href="/">Basement Remodeling Company</a>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <a class="breadcrumbLink" href="/portfolio/">Portfolio</a>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <span class="breadcrumbLink breadcrumbActive">
                            {{{ page.workTitle }}}, {{{ page.workCity }}}
                        </span>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<section class="portfolioWork">
    <div class="wrapper slimWrapper">
        <h1 class="sectionTitle">{{{ page.workTitle }}}, {{{ page.workCity }}}</h1>
        <div class="headerArrows">
            {{# if page.prevID }}
                <a href="/portfolio/{{{ page.prevID }}}"
                   class="headerArrow leftArrow">View previous portfolio work</a>
            {{/ if }}
            {{# if page.nextID }}
                <a href="/portfolio/{{{ page.nextID }}}"
                   class="headerArrow rightArrow">View next portfolio work</a>
            {{/ if }}
        </div>
        <div class="squareData">{{{ page.workSquare }}} SQ. FT.</div>
        <div class="picturesWrapper">
            <div class="pictureFull">
                <img class="fullsizePicture hiddenPicture" src=""
                     alt="{{{ page.workTitle }}}, {{{ page.workCity }}}">
                <div class="fullsizeLoader"></div>
            </div>
            <div class="portfolioPreviews">
                <ul class="previewList">
                    {{# each page.images }}
                        <li class="previewWrapper"
                            data-picture="{{{ imageName }}}.jpg">
                            <picture>
                                <source srcset="{{{ imageName }}}_38x38.jpg,
                                                {{{ imageName }}}_76x76.jpg 2x"
                                        media="(max-width: 479px)">
                                <source srcset="{{{ imageName }}}_71x71.jpg,
                                                {{{ imageName }}}_142x142.jpg 2x"
                                        media="(min-width: 480px)">
                                <img class="previewImage" src="{{{ imageName }}}_71x71.jpg"
                                     data-picture="{{{ imageName }}}.jpg"
                                     srcset="{{{ imageName }}}_71x71.jpg,
                                             {{{ imageName }}}_142x142.jpg 2x"
                                     alt="Preview image">
                            </picture>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="portfolioText">
            <div class="contentTextarea">
                {{{ page.workText }}}
            </div>
        </div>
        <div class="buttonWrapper">
            <a href="/portfolio/" title="Return to portfolio" class="backButton">GO BACK</a>
        </div>
    </div>
</section>