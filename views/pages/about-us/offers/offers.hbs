<section class="pageHeader">
    <div class="wrapper headerWrapper">
        <div class="contentWrapper">
            <h1 class="pageTitle">Financing offers</h1>
            <nav class="breadcrumbs">
                <ul class="breadcrumbList">
                    <li class="breadcrumbLinkWrapper">
                        <a class="breadcrumbLink" href="/">Basement Remodeling Company</a>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <span class="breadcrumbLink">About us</span>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <span class="breadcrumbLink breadcrumbActive">Financing offers</span>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<section class="offersContent">
    <form class="wrapper center offersForm">
        <h1 class="contentHeader">
            Basement financing offers powered by
            <a class="logoSprite greenskyLogo" href="#">GreenSky</a>
        </h1>
        {{> micro-blocks/offers-buttons/offers-buttons }}
        <h2 class="formTitle">ENTER AMOUNT TO APPLY FOR:</h2>
        <div class="fieldWrapper">
            <label class="formLabel" for="offersAmount">Amount</label>
            <input class="formField" type="text" id="offersAmount" name="offersAmount">
        </div>
        <p class="formHint">* – No interest if paid in full during promotional period, 17.99%-26.99% APR for 84 months if not paid in full.</p>
        <p class="formHint">** – offer is subject to credit approval.</p>
        <h2 class="formTitle">PLEASE CHECK:</h2>
        <div class="checkboxWrapper">
            <input class="formCheckbox" type="checkbox" name="zipCodeConfirm" id="zipCodeConfirm">
            <label class="formLabel" for="zipCodeConfirm">
                <span class="labelBox"></span>
                <span class="labelText">I hereby confirm that my Zip Code is within Basement Masters service area. You can find the map and the list of zip codes we service at the bottom of this page.</span>
            </label>
        </div>
        <div class="checkboxWrapper">
            <input class="formCheckbox" type="checkbox" name="minimumChargeConfirm" id="minimumChargeConfirm" checked>
            <label class="formLabel" for="minimumChargeConfirm">
                <span class="labelBox"></span>
                <span class="labelText">I hereby understand that there is a minimum charge of $20,000 for any project Basement Masters will undertake.</span>
            </label>
        </div>
        <p class="formHint">* — please fill in these fields</p>
        <button class="offersButton" disabled>APPLY NOW</button>
    </form>
</section>