<section class="pageHeader">
    <div class="wrapper headerWrapper">
        <div class="contentWrapper">
            <h1 class="pageTitle">How it works</h1>
            {{> micro-blocks/header-menu/header-menu }}
            <nav class="breadcrumbs">
                <ul class="breadcrumbList">
                    <li class="breadcrumbLinkWrapper">
                        <a class="breadcrumbLink" href="/">Basement Remodeling Company</a>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <span class="breadcrumbLink">How it works</span>
                    </li>
                    <li class="breadcrumbLinkWrapper">
                        <span class="breadcrumbLink breadcrumbActive">Basement tips</span>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

{{# if categories }}
    <section class="filtersWrapper">
        <div class="wrapper headerWrapper">
            {{> micro-blocks/filters/tips.filters }}
        </div>
    </section>
{{/if}}

<section class="pageContent">
    <div class="wrapper">
        <ul class="cardList elementsWrapper" data-page="9">
            {{# each tips }}
                <li class="cardWrapper">
                    <a class="cardLink"
                       href="/how-it-works/basement-tips/{{{ tipLink }}}">
                        {{# if tipImage }}
                            <picture>
                                <source srcset="{{{ tipImage }}}_120x83.jpg, {{{ tipImage }}}_240x166.jpg 2x"
                                        media="(max-width: 479px)" type="image/jpeg">
                                <source srcset="{{{ tipImage }}}_228x123.jpg, {{{ tipImage }}}_456x246.jpg 2x"
                                        media="(max-width: 767px)" type="image/jpeg">
                                <source srcset="{{{ tipImage }}}_236x123.jpg, {{{ tipImage }}}_472x246.jpg 2x"
                                        media="(max-width: 999px)" type="image/jpeg">
                                <source srcset="{{{ tipImage }}}_314x173.jpg, {{{ tipImage }}}_628x346.jpg 2x"
                                        media="(max-width: 1439px)" type="image/jpeg">
                                <source srcset="{{{ tipImage }}}_330x173.jpg, {{{ tipImage }}}_660x346.jpg 2x"
                                        media="(min-width: 1440px)" type="image/jpeg">
                                <img class="cardImage" src="{{{ tipImage }}}_330x173.jpg" alt="{{{ title }}}"
                                     srcset="{{{ tipImage }}}_330x173.jpg, {{{ tipImage }}}_660x346.jpg 2x">
                            </picture>
                        {{ else }}
                            <div class="cardImage defaultImage"></div>
                        {{/ if }}
                    </a>
                    <div class="cardData">
                        <a class="cardHeader"
                           href="/how-it-works/basement-tips/{{{ tipLink }}}">{{{ tipTitle }}}</a>
                        <p class="cardAnnounce" data-rows="5">{{{ tipAnnounce }}}</p>
                        <div class="twoColumnsWrapper bottomCardWrapper">
                            <span class="dataDate">{{{ tipDate }}}</span>
                            <span class="dataState">{{{ categoryName }}}</span>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
        <button class="showMoreButton {{# if tipsData.hiddenButton }}hiddenButton{{/if}}"
                data-scroll="1">SHOW MORE</button>
    </div>
    <div class="pageLoader hiddenLoader"></div>
</section>

<template class="elementTemplate">
    <li class="cardWrapper">
        <a class="cardLink" href=""></a>
        <div class="cardData">
            <a class="cardHeader" href=""></a>
            <p class="cardAnnounce" data-rows="5"></p>
            <div class="twoColumnsWrapper bottomCardWrapper">
                <span class="dataDate"></span>
                <span class="dataState"></span>
            </div>
        </div>
    </li>
</template>