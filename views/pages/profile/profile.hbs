<section class="ideasMain">
    <div class="wrapper listWrapper">
        <ul class="ideaList">
            <li class="ideaWrapper">
                <button class="addPhotoButton" title="Add a new photo" type="button">Add a new photo</button>
            </li>
            {{# each ideas }}
                <li class="ideaWrapper">
                    <div class="ideaPhotoWrapper">
                        <picture class="ideaPhoto">
                            <source srcset="/public/images/temp/{{{ image }}}.webp,
                                        /public/images/temp/{{{ image }}}@2x.webp 2x"
                                    type="image/webp">
                            <img class="ideaPhoto"
                                 src="/public/images/temp/{{{ image }}}.jpg"
                                 srcset="/public/images/temp/{{{ image }}}.jpg,
                                     /public/images/temp/{{{ image }}}@2x.jpg 2x"
                                 alt="{{{ title }}}">
                        </picture>
                        <button class="deleteCardButton" title="Delete picture" type="button">DELETE</button>
                        <div class="hoverCardWrapper">
                            <div class="deleteWrapper">
                                <p class="deleteAnnotation">Are you sure you want to remove this photo?</p>
                                <div class="deleteButtonsWrapper">
                                    <button class="cancelButton" title="Cancel" type="button">CANCEL</button>
                                    <button class="deleteButton" title="Delete" type="button">DELETE</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3 class="ideaTitle">{{{ title }}}</h3>
                    <strong class="ideaAuthor">{{{ author }}}</strong>
                </li>
            {{/each}}
        </ul>
        <button class="showMoreButton">SHOW MORE</button>
    </div>
</section>